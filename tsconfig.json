{
	"compilerOptions": {
		"moduleResolution": "node",
		"lib": [
			"DOM",
			"ES2017",
			"WebWorker"
		],
		"sourceMap": true,
		"target": "es2017",
		"resolveJsonModule": true,
		"alwaysStrict": true,
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"src/**/*",
		"src/node_modules/**/*"
	],
	"exclude": [
		"node_modules/**/**",
		"__sapper__/*",
		"static/*"
	]
}